<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/widget_recipe_name"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="22sp"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_below="@id/widget_recipe_name"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/measure_icon"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_mesaure" />

        <TextView
            android:id="@+id/widget_recipe_measure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_gravity="center"
            android:textSize="18sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/layout1"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ingredient_icon"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_baseline_create_24px"
            />

        <TextView
            android:id="@+id/widget_recipe_ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_gravity="center"
            android:textSize="18sp" />
    </LinearLayout>




</RelativeLayout>